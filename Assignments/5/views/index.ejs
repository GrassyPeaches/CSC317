<%- include('./partials/header') %>

<%# Sidebar only after login %>
<% if (isAuthenticated) { %>
  <div class="sidebar-container">
    <%- include('./partials/sidebar')%>
  </div>
<% } %> 

<div class="home-container">
  <!-- ===== HERO SECTION ===== -->
  <section class="hero-section">
    <div class="hero-text">
      <h1>Welcome to PlateMate</h1>
      <p class="hero-subtitle">
        PlateMate is a simple recipe sharing app where you can save your own recipes
        and access them from anywhere. No more lost notes, random screenshots, or
        half-remembered ingredients.
      </p>

      <% if (isAuthenticated) { %>
        <div class="hero-actions">
          <a href="/recipes" class="btn primary-btn">Go to Recipes</a>
          <a href="/recipes/new" class="btn secondary-btn">Create a Recipe</a>
        </div>
      <% } else { %>
        <div class="hero-actions">
          <a href="/auth/register" class="btn primary-btn">Create an Account</a>
          <a href="/auth/login" class="btn secondary-btn">Log In</a>
        </div>
        <p class="hero-note">
          Sign up to start building your personal digital cookbook.
        </p>
      <% } %>
    </div>

    <div class="hero-image-wrapper">
      <img
        src="/images/hero-recipe.jpg"
        alt="Table with homemade dishes and recipe ingredients"
        class="hero-image"
      />
    </div>
  </section>

  <!-- ===== WHAT THE APP DOES ===== -->
  <section class="features-section">
    <h2>What can you do with PlateMate?</h2>
    <div class="feature-grid">
      <div class="feature-card">
        <h3>Store Your Recipes</h3>
        <p>
          Save your favorite dishes with titles, descriptions, ingredients, and step-by-step
          instructions so you never forget how you made them.
        </p>
      </div>
      <div class="feature-card">
        <h3>Stay Organized</h3>
        <p>
          Keep all your recipes in one place instead of scattered across photos, messages,
          and paper notes.
        </p>
      </div>
      <div class="feature-card">
        <h3>Access Anywhere</h3>
        <p>
          Log in from any device and quickly pull up your recipes while you cook at home,
          at a friendâ€™s place, or anywhere else.
        </p>
      </div>
    </div>
  </section>
</div>

<%- include('./partials/footer') %>
