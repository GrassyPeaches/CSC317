<%- include('./partials/header') %>

<%# The sidebar will only appear after user login authenticated %>
<% if (isAuthenticated) { %>
  <div class="sidebar-container">
    <%- include('./partials/sidebar')%>
  </div>
<% } %>

<%# This is only to test the design of sidebar. REMOVE IT AFTER COMPLETED%>
<%- include('./partials/sidebar')%>
